---
layout: default
---
<div class="post">
  <header class="post-header" style="display: flex; gap: 3rem; align-items: flex-start;">
    <!-- Picture and social icons on the left -->
    <div class="profile-image" style="text-align: center; flex-shrink: 0; width: 240px;">
      {% assign profile_image_path = page.profile.image | prepend: 'assets/img/' %}
      {% if page.profile.image_circular %}
        {% assign profile_image_class = 'img-fluid z-depth-1 rounded-circle' %}
      {% else %}
        {% assign profile_image_class = 'img-fluid z-depth-1 rounded' %}
      {% endif %}
      <img src="{{ profile_image_path | relative_url }}" class="{{ profile_image_class }}" alt="Profile Picture" style="width: 220px; height: 220px;">

      {% if page.social %}
        <div class="social mt-4">
          <div class="contact-icons" style="font-size: 2.5rem;">{% include social.liquid %}</div>
        </div>
      {% endif %}
    </div>

    <!-- Name, subtitle, and bio on the right -->
    <div style="flex-grow: 1; padding-left: 2rem; border-left: 1px solid var(--global-divider-color);">
      <h1 class="post-title">
        {% if site.title == 'blank' %}
          <span class="font-weight-bold">{{ site.first_name }}</span>
          {% if site.middle_name %}{{ site.middle_name }}{% endif %}
          {{ site.last_name }}
        {% else %}
          {{ site.title }}
        {% endif %}
      </h1>
      {% if page.subtitle %}
        <p class="subtitle">{{ page.subtitle }}</p>
      {% endif %}

      <section id="about-me" class="mt-3">
        {{ content }}
      </section>
    </div>
  </header>

  {% if (page.latest_posts and page.latest_posts.enabled) or (page.selected_papers and page.selected_papers.enabled) %}
    <hr style="margin-top: 2rem;">
  {% endif %}

  {% if page.latest_posts and page.latest_posts.enabled %}
    <h2 class="mt-4">
      <a href="{{ '/news/' | relative_url }}" style="color: inherit">latest posts</a>
    </h2>
    {% include news.liquid limit=true %}
  {% endif %}

  {% if page.selected_papers and page.selected_papers.enabled %}
    <h2 class="mt-4">
      <a href="{{ '/publications/' | relative_url }}" style="color: inherit">selected publications</a>
    </h2>
    {% include selected_papers.liquid %}
  {% endif %}
</div>
