---
layout: default
---
<div class="post">
  <header class="post-header">
    <!-- Mobile-only name -->
    <div class="mobile-name">
      <h1 class="post-title">
        {% if site.title == 'blank' %}
          <span class="font-weight-bold">{{ site.first_name }}</span> {{ site.middle_name }}
          {{ site.last_name }}
        {% else %}
          {{ site.title }}
        {% endif %}
      </h1>
    </div>

    <div class="profile-wrapper">
      <!-- Image and social section -->
      <div class="profile float-left">
        <div class="image-wrapper">
          {% if page.profile.image %}
            {% assign profile_image_path = page.profile.image | prepend: 'assets/img/' %}
            {% if page.profile.image_circular %}
              {% assign profile_image_class = 'img-fluid z-depth-1 rounded-circle' %}
            {% else %}
              {% assign profile_image_class = 'img-fluid z-depth-1 rounded' %}
            {% endif %}
            {% capture sizes %}(min-width: {{  site.max_width }}) }}) {{ site.max_width | minus: 30 | times: 0.3}}px, (min-width: 576px) 30vw, 95vw{% endcapture %}
            {% include figure.liquid loading="eager" path=profile_image_path class=profile_image_class sizes=sizes alt=page.profile.image cache_bust=true %}
          {% endif %}
        </div>

        {% if page.social %}
          <div class="social mt-4">
            <div class="contact-icons">{% include social.liquid %}</div>
          </div>
        {% endif %}
      </div>

      <!-- Text section -->
      <div class="text-container">
        <div class="desktop-name">
          <h1 class="post-title">
            {% if site.title == 'blank' %}
              <span class="font-weight-bold">{{ site.first_name }}</span> {{ site.middle_name }}
              {{ site.last_name }}
            {% else %}
              {{ site.title }}
            {% endif %}
          </h1>
        </div>
        {% if page.subtitle %}
          <p class="desc">{{ page.subtitle }}</p>
        {% endif %}
        <div class="clearfix">{{ content }}</div>
      </div>
    </div>
  </header>

  {% if (page.latest_posts and page.latest_posts.enabled) or (page.selected_papers and page.selected_papers.enabled) %}
    <hr style="margin-top: 2rem;">
  {% endif %}

  {% if page.latest_posts and page.latest_posts.enabled %}
    <h2 class="mt-4">
      <a href="{{ '/news/' | relative_url }}" style="color: inherit">latest posts</a>
    </h2>
    {% include news.liquid limit=true %}
  {% endif %}

  {% if page.selected_papers and page.selected_papers.enabled %}
    <h2 class="mt-4">
      <a href="{{ '/publications/' | relative_url }}" style="color: inherit">selected publications</a>
    </h2>
    {% include selected_papers.liquid %}
  {% endif %}
</div>

<style>
  .profile-wrapper {
    display: flex;
  }

  .profile {
    flex: 0 0 auto;
    max-width: 30%;
    text-align: center;
    gap: 2rem;
  }

  .image-wrapper {
    width: 100%;
  }

  /* Scale icons based on container width:
   * - For large screens (>575px): icons are 1/7 of image width (30% of max-width)
   * - For small screens (<575px): icons are 1/7 of mobile image width (80vw)
   */
  .social .contact-icons {
    display: flex;
    justify-content: center;
    gap: 0.4em;
    margin-top: 1.5rem;
    font-size: calc((min(100vw, {{ site.max_width }}) - 30px) * 0.3 / 7) !important;
  }

  .contact-icons a {
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }

  .contact-icons a i {
    width: 1em;
    height: 1em;
  }

  .text-container {
    flex: 1;
    margin-left: 1rem;
    padding-left: 2rem;
    border-left: 1px solid var(--global-divider-color);
  }

  .mobile-name {
    display: none;
  }

  @media (max-width: 575px) {
    .mobile-name {
      display: block;
      margin-bottom: 2rem;
    }

    .desktop-name {
      display: none;
    }

    .profile-wrapper {
      flex-direction: column;
      container-type: inline-size;
      font-size: 1rem;
    }

    .profile {
      max-width: none;
      margin: 0 auto 2rem auto;
      width: 80vw;
    }

    .social .contact-icons {
      font-size: calc(80vw / 7) !important;
    }

    .text-container {
      padding-left: 0;
      border-left: none;
    }
  }
</style>
